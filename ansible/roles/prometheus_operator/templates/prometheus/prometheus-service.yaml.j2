apiVersion: v1
kind: Service
metadata:
  labels:
    prometheus: {{ prometheus_instance_name }}
  name: prometheus-{{ prometheus_instance_name }}
  namespace: monitoring
spec:
  ports:
  - name: web
    port: 9090
    targetPort: web
  selector:
    app: prometheus
    prometheus: {{ prometheus_instance_name }}
  sessionAffinity: ClientIP
