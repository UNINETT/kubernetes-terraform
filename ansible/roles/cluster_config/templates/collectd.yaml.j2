apiVersion: v1
kind: ServiceAccount
metadata:
  name: collectd
  namespace: kube-system

---

kind: ClusterRole
apiVersion: rbac.authorization.k8s.io/v1alpha1
metadata:
  name: collectd
rules:
- apiGroups:
  - extensions
  resources:
  - podsecuritypolicies
  resourceNames:
  - permissive
  verbs:
  - use

---

kind: ClusterRoleBinding
apiVersion: rbac.authorization.k8s.io/v1alpha1
metadata:
  name: collectd
subjects:
  - kind: ServiceAccount
    name: collectd
    namespace: kube-system
roleRef:
  kind: ClusterRole
  name: collectd
  apiGroup: rbac.authorization.k8s.io

---

apiVersion: extensions/v1beta1
kind: DaemonSet
metadata:
  name: collectd
  namespace: kube-system
spec:
  template:
    metadata:
      labels:
        name: collectd
    spec:
      serviceAccount: collectd
      terminationGracePeriodSeconds: 60
      hostNetwork: true
      hostPID: true
      containers:
      - image: registry.uninett.no/public/paas2-collectd
        name: collectd
        imagePullPolicy: Always
        securityContext:
          privileged: true
        env:
          - name: GRAPHITESERVER
            value: {{ graphite_server }}
          - name: GRAPHITE_PREFIX
            value: collectd.kubernetes-{{ cluster_name }}
